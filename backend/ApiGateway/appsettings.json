{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning"
        }
    },
    "ReverseProxy": {
        "Routes": {
            "account-route": {
                "ClusterId": "account-cluster",
                "Match": {
                    "Path": "/api/account/{**catch-all}"
                }
            },
            "customer-route": {
                "ClusterId": "account-cluster",
                "Match": {
                    "Path": "/api/customer/{**catch-all}"
                }
            },
            "auth-route": {
                "ClusterId": "account-cluster",
                "Match": {
                    "Path": "/api/auth/{**catch-all}"
                }
            },
            "dashboard-route": {
                "ClusterId": "account-cluster",
                "Match": {
                    "Path": "/api/dashboard/{**catch-all}"
                }
            },
            "transaction-route": {
                "ClusterId": "transaction-cluster",
                "Match": {
                    "Path": "/api/transaction/{**catch-all}"
                }
            },
            "payment-route": {
                "ClusterId": "payment-cluster",
                "Match": {
                    "Path": "/api/payment/{**catch-all}"
                }
            },
            "beneficiary-route": {
                "ClusterId": "payment-cluster",
                "Match": {
                    "Path": "/api/beneficiary/{**catch-all}"
                }
            },
            "notification-route": {
                "ClusterId": "notification-cluster",
                "Match": {
                    "Path": "/api/notification/{**catch-all}"
                }
            },
            "template-route": {
                "ClusterId": "notification-cluster",
                "Match": {
                    "Path": "/api/template/{**catch-all}"
                }
            },
            "support-route": {
                "ClusterId": "support-cluster",
                "Match": {
                    "Path": "/api/support/{**catch-all}"
                }
            },
            "chat-route": {
                "ClusterId": "support-cluster",
                "Match": {
                    "Path": "/api/chat/{**catch-all}"
                }
            }
        },
        "Clusters": {
            "account-cluster": {
                "Destinations": {
                    "destination1": {
                        "Address": "http://localhost:8001/"
                    }
                }
            },
            "transaction-cluster": {
                "Destinations": {
                    "destination1": {
                        "Address": "http://localhost:8002/"
                    }
                }
            },
            "payment-cluster": {
                "Destinations": {
                    "destination1": {
                        "Address": "http://localhost:8003/"
                    }
                }
            },
            "notification-cluster": {
                "Destinations": {
                    "destination1": {
                        "Address": "http://localhost:8004/"
                    }
                }
            },
            "support-cluster": {
                "Destinations": {
                    "destination1": {
                        "Address": "http://localhost:8005/"
                    }
                }
            }
        }
    }
}