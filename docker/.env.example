# Banking Platform Environment Configuration

# Database Configuration
DB_PASSWORD=YourPassword123!
DB_USER=sa
DB_NAME_ACCOUNTS=BankingAccountsDb
DB_NAME_TRANSACTIONS=BankingTransactionsDb
DB_NAME_PAYMENTS=BankingPaymentsDb
DB_NAME_NOTIFICATIONS=BankingNotificationsDb

# JWT Configuration
JWT_SECRET_KEY=ThisIsASecretKeyThatShouldBeStoredInAzureKeyVaultInProduction
JWT_ISSUER=banking-platform
JWT_AUDIENCE=banking-clients
JWT_EXPIRY_HOURS=24

# Azure Service Bus (Mock for development)
SERVICE_BUS_CONNECTION=Endpoint=sb://banking-platform.servicebus.windows.net/;SharedAccessKeyName=RootManageSharedAccessKey;SharedAccessKey=YOUR_SERVICE_BUS_KEY

# Redis Configuration
REDIS_CONNECTION=redis:6379
REDIS_PASSWORD=

# Email Configuration (SendGrid)
SENDGRID_API_KEY=YOUR_SENDGRID_API_KEY
FROM_EMAIL=noreply@banking-platform.com
FROM_NAME=Banking Platform

# SMS Configuration (Twilio)
TWILIO_ACCOUNT_SID=YOUR_TWILIO_ACCOUNT_SID
TWILIO_AUTH_TOKEN=YOUR_TWILIO_AUTH_TOKEN
TWILIO_FROM_NUMBER=+1234567890

# Push Notification Configuration (Firebase)
FIREBASE_SERVER_KEY=YOUR_FIREBASE_SERVER_KEY

# Monitoring Configuration
GRAFANA_ADMIN_PASSWORD=admin
ELASTICSEARCH_PASSWORD=

# Environment
ASPNETCORE_ENVIRONMENT=Development
NODE_ENV=production

# API Base URLs
ACCOUNT_SERVICE_URL=http://account-service
TRANSACTION_SERVICE_URL=http://transaction-service
PAYMENT_SERVICE_URL=http://payment-service
NOTIFICATION_SERVICE_URL=http://notification-service

# Frontend Configuration
REACT_APP_API_BASE_URL=http://localhost:8000/api
REACT_APP_ENABLE_ANALYTICS=false

# Security Headers
SECURITY_HEADERS_ENABLED=true
CORS_ORIGINS=http://localhost:3000,https://banking-ui.azurewebsites.net

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_SECOND=10
RATE_LIMIT_BURST_SIZE=20

# Logging
LOG_LEVEL=Information
LOG_STRUCTURED=true
LOG_CONSOLE_ENABLED=true
LOG_FILE_ENABLED=true